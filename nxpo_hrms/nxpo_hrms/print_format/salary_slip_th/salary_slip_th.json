 "font_size": 14,
 "html": "\r\n    \r\n{% set dateConvert = doc.posting_date|string %}\r\n\r\n    {% set date_parts = dateConvert.split('-') %}\r\n    {% set year = date_parts[0] | int + 543 %}\r\n    {% set month = date_parts[1] %}\r\n    {% set day = date_parts[2] | int %}\r\n    {% set month_th = {\r\n      '01': '\u0e21\u0e01\u0e23\u0e32\u0e04\u0e21', '02': '\u0e01\u0e38\u0e21\u0e20\u0e32\u0e1e\u0e31\u0e19\u0e18\u0e4c', '03': '\u0e21\u0e35\u0e19\u0e32\u0e04\u0e21', '04': '\u0e40\u0e21\u0e29\u0e32\u0e22\u0e19',\r\n      '05': '\u0e1e\u0e24\u0e29\u0e20\u0e32\u0e04\u0e21', '06': '\u0e21\u0e34\u0e16\u0e38\u0e19\u0e32\u0e22\u0e19', '07': '\u0e01\u0e23\u0e01\u0e0e\u0e32\u0e04\u0e21', '08': '\u0e2a\u0e34\u0e07\u0e2b\u0e32\u0e04\u0e21',\r\n      '09': '\u0e01\u0e31\u0e19\u0e22\u0e32\u0e22\u0e19', '10': '\u0e15\u0e38\u0e25\u0e32\u0e04\u0e21', '11': '\u0e1e\u0e24\u0e28\u0e08\u0e34\u0e01\u0e32\u0e22\u0e19', '12': '\u0e18\u0e31\u0e19\u0e27\u0e32\u0e04\u0e21'\r\n    }[month] %}\r\n\r\n<div class=\"bg-img\">\r\n    <div class=\"detail\">\r\n    <!-- Top Row for Organization Name and Logo -->\r\n        <div class=\"row\">\r\n            <div class=\"col-lg-8 col-md-8 col-sm-8\">\r\n                <label style=\"color: black; \">\u0e2a\u0e33\u0e19\u0e31\u0e01\u0e07\u0e32\u0e19\u0e2a\u0e20\u0e32\u0e19\u0e42\u0e22\u0e1a\u0e32\u0e22\u0e01\u0e32\u0e23\u0e2d\u0e38\u0e14\u0e21\u0e28\u0e36\u0e01\u0e29\u0e32 \u0e27\u0e34\u0e17\u0e22\u0e32\u0e28\u0e32\u0e2a\u0e15\u0e23\u0e4c \u0e27\u0e34\u0e08\u0e31\u0e22\u0e41\u0e25\u0e30\u0e19\u0e27\u0e31\u0e15\u0e01\u0e23\u0e23\u0e21\u0e41\u0e2b\u0e48\u0e07\u0e0a\u0e32\u0e15\u0e34</label>\r\n            </div>\r\n            <div class=\"col-lg-4 col-md-4 col-sm-4 text-right\">\r\n                <img class=\"logo\" src=\"/assets/nxpo_hrms/images/ssl/logo1.png\" alt=\"Organization Logo\" />\r\n            </div>\r\n        </div>\r\n    \r\n        <!-- Second Row for Employee Information -->\r\n        <div class=\"row\">\r\n            <div class=\"col-lg-7 col-md-7 col-sm-7\">\r\n                <div class=\"row\">\r\n                    <div class=\"col-lg-4 col-md-4 col-sm-4\">\r\n                        <label style=\"color: black; \">\u0e23\u0e2b\u0e31\u0e2a\u0e1e\u0e19\u0e31\u0e01\u0e07\u0e32\u0e19: {{ doc.employee }}</label>\r\n                    </div>\r\n                    <div class=\"col-lg-8 col-md-8 col-sm-8\">\r\n                        <label style=\"color: black; \">\u0e0a\u0e37\u0e48\u0e2d-\u0e19\u0e32\u0e21\u0e2a\u0e01\u0e38\u0e25: {{ doc.employee_name }}</label>\r\n                    </div>\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <label style=\"color: black; \">\u0e1d\u0e48\u0e32\u0e22: {{ doc.department }}</label>\r\n                    </div>\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <label style=\"color: black; \">\u0e15\u0e33\u0e41\u0e2b\u0e19\u0e48\u0e07: {{ doc.designation }}</label>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n            \r\n            {% set employeeData = frappe.get_doc(\"Employee\", {\"name\": doc.employee}) %}\r\n\r\n            \r\n            <div class=\"col-lg-3 col-md-3 col-sm-3\">\r\n                <div class=\"row\">\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <label style=\"color: black; \">\u0e42\u0e2d\u0e19\u0e40\u0e02\u0e49\u0e32\u0e1a\u0e31\u0e0d\u0e0a\u0e35: {{ employeeData.bank_name|default('', true) }}</label>\r\n                     </div>\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <label style=\"color: black; \">\u0e40\u0e25\u0e02\u0e17\u0e35\u0e48\u0e1a\u0e31\u0e0d\u0e0a\u0e35: {{employeeData.bank_ac_no|default('', true)}}</label>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n            <div class=\"col-lg-2 col-md-2 col-sm-2\">\r\n                <div class=\"row\">\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <label style=\"color: black; text-align: right;\">\u0e43\u0e1a\u0e08\u0e48\u0e32\u0e22\u0e40\u0e07\u0e34\u0e19\u0e40\u0e14\u0e37\u0e2d\u0e19 </label>\r\n                     </div>\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <label style=\"color: black; text-align: right;\"> {{ month_th }} {{ year }} </label>\r\n                    </div>\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <label style=\"color: black;  text-align: right;\">\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48\u0e08\u0e48\u0e32\u0e22  {{ day }} {{ month_th }} {{ year }} </label>\r\n                    </div>\r\n\r\n                </div>\r\n            </div>\r\n        </div>\r\n   </div>\r\n   \r\n   <br></br>\r\n   \r\n   <!-- Retrieve data from the Salaty Detail table directly via name and filter from parentfeild -->\r\n    {% set earningsData = frappe.get_all('Salary Detail', filters={'parent': doc.name, 'parentfield': 'earnings'}, fields=['name','salary_component', 'amount', 'parentfield']) %}\r\n    \r\n\r\n   <div class=\"content\">\r\n       <div class=\"row\">\r\n        <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n            <label style=\"color: black; text-align: center;\">\u0e23\u0e32\u0e22\u0e01\u0e32\u0e23\u0e44\u0e14\u0e49  </label>\r\n\r\n            <div class=\"row\">\r\n               {% for earning in earningsData %}\r\n                    <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                      <!--<div class=\"row\">-->\r\n                           <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                                <label style=\"color: black; text-align: left;\">{{earning.salary_component}} </label>\r\n                            </div>\r\n                            <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                                <label style=\"color: black; text-align: right;\">{{ \"{:,.1f}\".format(earning.amount) }} </label>\r\n                            </div>\r\n                       <!--</div>-->\r\n                 </div>\r\n                {% endfor %}\r\n                 \r\n            </div>\r\n        </div>\r\n        \r\n    {% set deductionsData = frappe.get_all('Salary Detail', filters={'parent': doc.name, 'parentfield': 'deductions'}, fields=['name','salary_component', 'amount', 'parentfield']) %}\r\n\r\n        <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n            <label style=\"color: black; text-align: center;\">\u0e23\u0e32\u0e22\u0e01\u0e32\u0e23\u0e2b\u0e31\u0e01 </label>\r\n            <div class=\"row\">\r\n               {% for deduction in deductionsData %}\r\n                <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                        <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                                <label style=\"color: black; text-align: left;\">{{deduction.salary_component}} </label>\r\n                        </div>\r\n                        <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                                <label style=\"color: black; text-align: right;\">{{ \"{:,.1f}\".format(deduction.amount) }} </label>\r\n                        </div>\r\n                 </div>\r\n                {% endfor %}\r\n\r\n\r\n            </div>\r\n        </div>\r\n        </div>\r\n        <br></br>\r\n        <br></br>\r\n        \r\n        <div class=\"row\">\r\n             <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                  <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                      <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                          <label style=\"color: black; text-align: right;\">\u0e23\u0e27\u0e21\u0e23\u0e32\u0e22\u0e44\u0e14\u0e49 </label>\r\n                      </div>\r\n                      <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                          <label style=\"color: black; text-align: right;\">{{ \"{:,.1f}\".format(doc.gross_pay) }} </label>\r\n                      </div>\r\n                 </div>\r\n             </div>\r\n             <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                  <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                    <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                          <label style=\"color: black; text-align: left;\">\u0e23\u0e27\u0e21\u0e23\u0e32\u0e22\u0e01\u0e32\u0e23\u0e2b\u0e31\u0e01 </label>\r\n                      </div>\r\n                      <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                          <label style=\"color: black; text-align: right;\">{{ \"{:,.1f}\".format(doc.total_deduction) }} </label>\r\n                      </div>\r\n                 </div>\r\n                 <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                    <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                          <label style=\"color: black; text-align: left;\">\u0e23\u0e32\u0e22\u0e44\u0e14\u0e49\u0e2a\u0e38\u0e17\u0e18\u0e34 </label>\r\n                      </div>\r\n                      <div class=\"col-lg-6 col-md-6 col-sm-6\">\r\n                          <label style=\"color: black; text-align: right;\">{{ \"{:,.1f}\".format(doc.net_pay) }} </label>\r\n                      </div>\r\n                 </div>\r\n             </div>\r\n        </div>\r\n    </div>\r\n    \r\n    <br></br>\r\n\r\n    <div class=\"content-end\">\r\n          <div class=\"row\">\r\n              <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                  <div class=\"col-lg-3 col-md-3 col-sm-3\">\r\n                       <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                           <label style=\"color: black; text-align: center;\">\u0e23\u0e32\u0e22\u0e44\u0e14\u0e49\u0e2a\u0e30\u0e2a\u0e21 </label>\r\n                       </div> \r\n                        <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                           <label style=\"color: black; text-align: center;\">{{ \"{:,.1f}\".format(doc.gross_year_to_date) }} </label>\r\n                       </div> \r\n                  </div> \r\n                  \r\n                    <div class=\"col-lg-3 col-md-3 col-sm-3\">\r\n                       <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                           <label style=\"color: black; text-align: center;\">\u0e20\u0e32\u0e29\u0e35\u0e2a\u0e30\u0e2a\u0e21 </label>\r\n                       </div> \r\n                        <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                           <label style=\"color: black; text-align: center;\">{{ \"{:,.1f}\".format(doc.income_tax_deducted_till_date) }}</label>\r\n                       </div> \r\n                  </div> \r\n                {% set pvdData = frappe.get_doc(\"Salary Detail\", {'parent': doc.name, 'abbr': 'PVD'}) %}\r\n               \r\n                 <div class=\"col-lg-4 col-md-4 col-sm-4\">\r\n                       <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                           <label style=\"color: black; text-align: center;\">\u0e01\u0e2d\u0e07\u0e17\u0e38\u0e19\u0e2a\u0e33\u0e23\u0e2d\u0e07\u0e40\u0e25\u0e35\u0e49\u0e22\u0e07\u0e0a\u0e35\u0e1e\u0e2a\u0e30\u0e2a\u0e21 </label>\r\n                       </div> \r\n                        <div class=\"col-lg-12 col-md-12 col-sm-12\">\r\n                           <label style=\"color: black; text-align: center;\">{{ \"{:,.1f}\".format(pvdData.year_to_date) }} </label>\r\n                       </div> \r\n                  </div> \r\n                  \r\n              </div> \r\n          </div> \r\n    </div>   \r\n    \r\n    <br></br>\r\n    <br></br>\r\n    <div class=\"content-end\">\r\n      <label style=\"color: black; text-align: right;\">\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23\u0e19\u0e35\u0e49\u0e44\u0e14\u0e49\u0e08\u0e31\u0e14\u0e17\u0e33\u0e42\u0e14\u0e22\u0e27\u0e34\u0e18\u0e35\u0e01\u0e32\u0e23\u0e17\u0e32\u0e07\u0e2d\u0e34\u0e40\u0e25\u0e47\u0e01\u0e17\u0e23\u0e2d\u0e19\u0e34\u0e01\u0e2a\u0e4c \u0e27\u0e31\u0e19\u0e17\u0e35\u0e48\u0e1e\u0e34\u0e21\u0e1e\u0e4c {{frappe.utils.now_datetime()}} </label>\r\n    </div>\r\n    \r\n</div>\r\n\r\n",
